<ui:ContentDialog
    x:Class="Serein.Plus.Dialogs.CommandEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Serein.Plus.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Serein.Plus.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="命令编辑器"
    MinWidth="300"
    d:DataContext="{d:DesignInstance Type=local:CommandEditorDialog}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    CloseButtonText="取消"
    DefaultButton="Primary"
    PrimaryButtonText="确定"
    mc:Ignorable="d">
    <TextBox
        x:Name="CommandTextBox"
        ui:ControlHelper.Header="命令"
        Text="{Binding Command}" />

</ui:ContentDialog>
