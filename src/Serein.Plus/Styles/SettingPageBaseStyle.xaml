<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:Serein.Plus.Converters"
    xmlns:local="clr-namespace:Serein.Plus.Pages.Settings"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">
    <Style BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>
    <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="TextBox">
        <Setter Property="Margin" Value="0,5,0,10" />
    </Style>
    <Style BasedOn="{StaticResource DefaultPasswordBoxStyle}" TargetType="PasswordBox">
        <Setter Property="Margin" Value="0,5,0,10" />
    </Style>
    <Style BasedOn="{StaticResource DefaultComboBoxStyle}" TargetType="ComboBox">
        <Setter Property="Margin" Value="0,5,0,10" />
    </Style>

    <Style TargetType="ui:SettingsCard">
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <Style TargetType="ui:SettingsExpander">
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>

    <Style x:Key="SettingsExpanderValue" TargetType="TextBlock">
        <Setter Property="MaxWidth" Value="350" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <converter:EnumConverter x:Key="enumConverter" />
    <converter:MultiLinesConverter x:Key="multiLinesConverter" />
</ResourceDictionary>