<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Serein.Pro.Views.Settings.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Serein.Pro.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView
        x:Name="NavView"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        ItemInvoked="NavView_ItemInvoked"
        PaneDisplayMode="Top">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="连接" Tag="{x:Bind ViewModel.Connection}" />
            <NavigationViewItem Content="应用" />
            <NavigationViewItem Content="反应" />
            <NavigationViewItem Content="SSH" />
            <NavigationViewItem Content="Web Api" />
            <NavigationViewItem Content="关于" Tag="{x:Bind ViewModel.About}" />
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame" IsNavigationStackEnabled="False" />
    </NavigationView>
</Page>
