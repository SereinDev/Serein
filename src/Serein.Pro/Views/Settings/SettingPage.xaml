<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Serein.Pro.Views.Settings.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Serein.Pro.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border BorderBrush="{StaticResource ControlStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <SelectorBar x:Name="SelectorBar" SelectionChanged="SelectorBar_SelectionChanged">
                <SelectorBarItem
                    IsSelected="True"
                    Tag="{x:Bind ViewModel.Connection}"
                    Text="连接" />
                <SelectorBarItem Text="应用" />
                <SelectorBarItem Text="反应" />
                <SelectorBarItem Text="SSH" />
                <SelectorBarItem Text="Web Api" />
                <SelectorBarItem Text="关于" />
            </SelectorBar>
        </Border>

        <Frame
            x:Name="ContentFrame"
            Grid.Row="1"
            IsNavigationStackEnabled="False" />
    </Grid>
</Page>
