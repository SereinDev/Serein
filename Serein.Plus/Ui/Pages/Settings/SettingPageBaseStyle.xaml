<ResourceDictionary
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:converter="clr-namespace:Serein.Plus.Ui.Converters"
        xmlns:local="clr-namespace:Serein.Plus.Ui.Pages.Settings">
    <Style
            TargetType="Button"
            BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter
                Property="Margin"
                Value="0,0,0,10" />
    </Style>
    <Style
            TargetType="TextBox"
            BasedOn="{StaticResource DefaultTextBoxStyle}">
        <Setter
                Property="Margin"
                Value="0,5,0,10" />
    </Style>
    <Style
            TargetType="PasswordBox"
            BasedOn="{StaticResource DefaultPasswordBoxStyle}">
        <Setter
                Property="Margin"
                Value="0,5,0,10" />
    </Style>
    <Style
            TargetType="ComboBox"
            BasedOn="{StaticResource DefaultComboBoxStyle}">
        <Setter
                Property="Margin"
                Value="0,5,0,10" />
    </Style>

    <converter:EnumConverter x:Key="enumConverter" />
    <converter:MultiLinesConverter x:Key="multiLinesConverter" />
</ResourceDictionary>