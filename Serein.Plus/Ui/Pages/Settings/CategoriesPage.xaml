<ui:Page
        x:Class="Serein.Plus.Ui.Pages.Settings.CategoriesPage"
        xmlns:local="clr-namespace:Serein.Plus.Ui.Pages.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:utils="clr-namespace:Serein.Plus.Ui.Utils"
        Title="设置"
        d:DesignHeight="450"
        d:DesignWidth="800"
        mc:Ignorable="d">
    <Grid>
        <ui:NavigationView
                x:Name="NavigationView"
                Grid.Row="1"
                IsBackButtonVisible="Collapsed"
                PaneDisplayMode="Top"
                SelectionChanged="OnNavigationViewSelectionChanged">
            <ui:Frame
                    x:Name="SubFrame"
                    NavigationFailed="OnNavigationFailed"
                    Navigating="OnNavigating"
                    utils:DisableNavigation.Disable="True" />
        </ui:NavigationView>
    </Grid>
</ui:Page>