<UserControl
        x:Class="Serein.Plus.Ui.Controls.Console"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:local="clr-namespace:Serein.Plus.Ui.Controls">

    <UserControl.FontFamily>Consolas,微软雅黑</UserControl.FontFamily>
    <UserControl.FontSize>14</UserControl.FontSize>

    <RichTextBox
            x:Name="ConsoleRichTextBox"
            FontFamily="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Console}}, Path=FontFamily}"
            Background="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Console}}, Path=Background}"
            FontSize="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:Console}}, Path=FontSize}"
            IsUndoEnabled="False"
            UndoLimit="0">
        <RichTextBox.Resources>
            <Style TargetType="{x:Type Paragraph}">
                <Setter
                        Property="Margin"
                        Value="0" />
            </Style>
        </RichTextBox.Resources>
    </RichTextBox>
</UserControl>